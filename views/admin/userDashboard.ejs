<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <main class="flex">
      <%- include("../partials/aside") %>
      <section class="lg:w-4/5 w-full h-screen bg-gray-200">
        <div id="search" class="flex items-center">
          <input
            type="search"
            name="search"
            id="search"
            placeholder="Search user by email id"
            class="mx-10 my-5 px-3 py-1 border-2 w-[95vw] lg:w-[50vw] focus:outline-slate-600 border-slate-600 rounded-sm focus:rounded-2xl lg:transition-all lg:duration-150 lg:ease-in-out"
          />

          <div class="relative group">
            <ion-icon
              name="filter-outline"
              class="text-xl cursor-pointer pr -10"
            ></ion-icon>

            <div
              id="hidden"
              class="w-50 absolute lg:top-5 lg:-left-3 right-5 bg-white rounded-xl px-3 hidden group-hover:block"
            >
              <h1 class="font-bold mt-1 px-3 text-xl text-slate-800">Filter</h1>
              <h1 class="mt-3 px-3 text-slate-600 font-medium">
                Subscription Status
              </h1>
              <select
                name="select"
                id="select"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="free">Free</option>
                <option value="monthly">monthly</option>
                <option value="yearly">yearly</option>
              </select>

              <h1 class="mt-3 px-3 text-slate-600 font-medium">
                Account status
              </h1>
              <select
                name="select"
                id="select"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="active">Active</option>
                <option value="notactive">Not Active</option>
              </select>

              <h1 class="mt-3 px-3 text-slate-600 font-medium">Role</h1>
              <select
                name="select"
                id="select"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="user">user</option>
                <option value="admin">admin</option>
              </select>
              <br />

              <input
                type="submit"
                value="filter"
                class="mx-3 px-3 py-1 bg-blue-900 mb-2 text-white rounded-xl cursor-pointer"
              />
            </div>
          </div>
        </div>

        <!-- list all the users -->

        <div
          class="w-[95vw] lg:w-[75vw] mx-auto overflow-x-auto shadow-md rounded-lg"
        >
          <table id="usersTable" class="w-full divide-y divide-blue-200">
            <thead class="bg-blue-500 text-white">
              <tr>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Id
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Name
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Email
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Role
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Plan
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Remaining url
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Remaining Days
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Status
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Signup Date
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-blue-100">
              <% users.forEach(user => { %>
              <tr class="hover:bg-blue-50 transition-colors">
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= user._id %>
                </td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= user.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800"
                  >
                    <%= user.role %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.plan.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.remainingUrls %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.remainingDays %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if (user.isActive === true) { %>
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
                  >
                    <%= user.isActive %>
                  </span>
                  <% } else { %>
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800"
                  >
                    <%= user.status %>
                  </span>
                  <% } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.createdAt.toDateString() %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </main>

    <script>
      //define data a
    </script>
  </body>
</html>
