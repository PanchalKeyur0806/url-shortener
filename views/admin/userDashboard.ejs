<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <main class="flex">
      <%- include("../partials/aside") %>
      <section class="lg:w-4/5 w-full h-screen bg-gray-200">
        <div id="search" class="flex items-center">
          <input
            type="search"
            name="search"
            id="search"
            placeholder="Search user by email id"
            class="mx-10 my-5 px-3 py-1 border-2 w-[95vw] lg:w-[50vw] bg-white focus:outline-slate-600 border-slate-600 rounded-sm focus:rounded-2xl lg:transition-all lg:duration-150 lg:ease-in-out"
            onchange="searchFunction(this)"
          />

          <div class="relative">
            <div id="filterMenu">
              <ion-icon
                name="filter-outline"
                class="text-xl cursor-pointer pr -10"
              ></ion-icon>
            </div>
            <div
              id="hidden"
              class="w-50 absolute lg:top-5 lg:-left-3 right-5 bg-white rounded-xl px-3 hidden"
            >
              <h1 class="font-bold mt-1 px-3 text-xl text-slate-800">Filter</h1>
              <h1 class="mt-3 px-3 text-slate-600 font-medium">
                Subscription Status
              </h1>
              <select
                name="selectPlan"
                id="selectPlan"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="">None</option>
                <option value="free">Free</option>
                <option value="monthly">monthly</option>
                <option value="yearly">yearly</option>
              </select>

              <h1 class="mt-3 px-3 text-slate-600 font-medium">
                Account status
              </h1>
              <select
                name="statusSearch"
                id="statusSearch"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="none">None</option>
                <option value="active">Active</option>
                <option value="notactive">Not Active</option>
              </select>

              <h1 class="mt-3 px-3 text-slate-600 font-medium">Role</h1>
              <select
                name="selectUser"
                id="selectUser"
                class="border rounded-sm mb-3 mx-3 px-2"
              >
                <option value="none">None</option>
                <option value="user">user</option>
                <option value="admin">admin</option>
              </select>
              <br />
            </div>
          </div>
          <div class="ml-5 mr-5 bg-blue-900 px-3 py-1 text-white rounded-sm">
            <a href="/admin/users" class="">Get all users</a>
          </div>
        </div>

        <!-- list all the users -->

        <div
          class="w-[95vw] lg:w-[75vw] mx-auto overflow-x-auto shadow-md rounded-lg"
        >
          <table id="usersTable" class="w-full divide-y divide-blue-200">
            <thead class="bg-blue-500 text-white">
              <tr>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Id
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Name
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Email
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Role
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Plan
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Remaining url
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Remaining Days
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Status
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider"
                >
                  Signup Date
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-blue-100">
              <% if (users && users.length > 0) { %> <% users.forEach(user => {
              %>
              <tr class="hover:bg-blue-50 transition-colors">
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= user._id %>
                </td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= user.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800"
                  >
                    <%= user.role %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.plan.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.remainingUrls %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.remainingDays %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if (user.isActive === true) { %>
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
                  >
                    <%= user.isActive %>
                  </span>
                  <% } else { %>
                  <span
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800"
                  >
                    <%= user.status %>
                  </span>
                  <% } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.createdAt.toDateString() %>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td
                  colspan="9"
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                >
                  No users found
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <div
          id="arrow-btn"
          class="mt-10 mx-10 flex justify-between items-center"
        >
          <div class="text-4xl cursor-pointer">
            <ion-icon
              id="prevBtn"
              class="text-white bg-blue-800 rounded-full"
              name="arrow-back-circle-outline"
            ></ion-icon>
          </div>

          <div class="flex items-center text-xl">
            <p class="mx-2 font-medium text-blue-800">Page no :-</p>
            <p id="pageNo" class="text-white bg-blue-800 rounded-full px-2">
              <%= pageNo %>
            </p>
          </div>

          <div class="text-4xl cursor-pointer">
            <ion-icon
              id="nextBtn"
              class="text-white bg-blue-800 rounded-full"
              name="arrow-forward-circle-outline"
            ></ion-icon>
          </div>
        </div>
      </section>
    </main>

    <script>
      // open filter filterMenu
      const filterMenu = document.getElementById("filterMenu");
      const hidden = document.getElementById("hidden");
      filterMenu.addEventListener("click", (e) => {
        hidden.classList.toggle("hidden");
      });

      function searchFunction(e) {
        const value = e.value.trim();
        console.log(value);

        if (value === " ") {
          window.location.href = "/admin/users";
        } else {
          window.location.href = `/admin/users?search=${value}`;
        }
      }

      // search by plan
      const selectPlan = document.getElementById("selectPlan");
      selectPlan.addEventListener("change", (e) => {
        e.preventDefault();
        const value = e.target.value;
        window.location.href = `/admin/users?search=plan:${value}`;
      });

      // search by status
      const statusSearch = document.getElementById("statusSearch");
      statusSearch.addEventListener("change", (e) => {
        e.preventDefault();
        const value = e.target.value;
        window.location.href = `/admin/users?status=${value}`;
      });

      // search by role
      const userRole = document.getElementById("selectUser");
      userRole.addEventListener("change", (e) => {
        e.preventDefault();
        const value = e.target.value;
        window.location.href = `/admin/users?role=${value}`;
      });
    </script>
    <script>
      const nextBtn = document.getElementById("nextBtn");
      const prevBtn = document.getElementById("prevBtn");
      const pageNo = document.getElementById("pageNo");

      let value = parseInt(pageNo.innerText);

      const totalPages = <%= totalPages %>; // passed from backend
      const usersLength = <%= users.length %>; // current page user count

      nextBtn.addEventListener("click", () => {
        if (value >= totalPages) {
          alert("You're already on the last page.");
          return;
        }

        value += 1;
        window.location.href = `/admin/users?page=${value}`;
      });

      prevBtn.addEventListener("click", () => {
        if (value <= 1) {
          alert("You're already on the first page.");
          return;
        }

        value -= 1;
        window.location.href = `/admin/users?page=${value}`;
      });
    </script>
  </body>
</html>
