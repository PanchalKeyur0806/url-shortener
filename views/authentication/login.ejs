<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>

  <body class="bg-white bg-no-repeat">
    <!-- Importing the navbar -->
    <%- include("../partials/navbar") %>

    <div id="popup">
      <% if (status === "success") { %>
      <div
        class="w-[95vw] md:w-[60vw] mx-auto mt-5 p-4 flex justify-between items-center bg-green-100 text-green-800 rounded-lg"
      >
        <p><%= message %></p>
        <p class="cursor-pointer dismiss-btn">X</p>
      </div>
      <% } else if(status === "error"){ %>
      <div
        class="w-[95vw] md:w-[60vw] mx-auto mt-5 p-4 flex justify-between items-center bg-red-100 text-red-800 rounded-lg"
      >
        <p><%= message %></p>
        <p class="cursor-pointer dismiss-btn">X</p>
      </div>
      <% } %>
    </div>

    <!-- Login Page -->
    <main class="container w-[95vw] md:w-[70vw] mx-auto my-10">
      <section class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/2">
          <div id="form-heading" class="mx-4 mb-5 mt-4">
            <h1 class="text-3xl font-bold font-sans">Login</h1>
            <p class="font-extralight mt-2">Login to access your account</p>
          </div>
          <form method="post" action="/" class="mt-10">
            <div class="grid grid-cols-1 mb-5 mx-4">
              <input
                class="border focus:outline-none focus:bg-gray-100 py-1 px-3 rounded-sm"
                type="email"
                name="email"
                id="email"
                placeholder="Enter your email id here"
              />
            </div>
            <div class="grid grid-cols-1 mb-5 mx-4">
              <input
                class="border focus:outline-none focus:bg-gray-100 py-1 px-3 rounded-sm"
                type="password"
                name="password"
                id="password"
                placeholder="Enter your password here"
              />
            </div>
            <div class="flex flex-row-reverse mx-4 mb-5">
              <p class="text-blue-900 cursor-pointer px-2 py-1">
                forgot password?
              </p>
            </div>
            <div class="mx-4 mb-5 text-center py-2">
              <input
                type="submit"
                value="login"
                class="px-5 cursor-pointer py-2 bg-blue-950 text-white rounded hover:rounded-3xl transition-all duration-150 ease-in"
              />
            </div>
            <div class="mb-5 mx-4">
              <p>
                don't have account?
                <a href="/register" class="text-blue-950 font-medium"
                  >register</a
                >
              </p>
            </div>
          </form>
        </div>
        <div id="login-img" class="w-full md:w-1/2 flex justify-center mt-8">
          <img src="/images/auth/login.png" alt="login image" class="mx-5" />
        </div>
      </section>
    </main>

    <script>
      const popup = document.getElementById("popup");
      const dismissBtn = document.getElementsByClassName("dismiss-btn");

      popup.addEventListener("click", () => {
        popup.remove();
      });

      setTimeout(() => {
        popup.style.display = "none";
      }, 5000);
    </script>
  </body>
</html>
